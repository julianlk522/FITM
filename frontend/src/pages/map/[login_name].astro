---
import Link from '../../components/Link.astro'
import Layout from '../../layouts/Layout.astro'
import type { TreasureMap } from '../../types'

const { login_name } = Astro.params

const user_map_resp = await fetch(`http://127.0.0.1:8000/map/${login_name}`)
if (user_map_resp.status > 399) {
	return Astro.redirect('/404')
}
const user_map_links: TreasureMap = await user_map_resp.json()
// user found: [{URL: 'https://example.com', LikeCount: 100}, ...]
// no user found: redirect
---

<Layout title='Welcome to the Open Internet Treasure Map (OITM)'>
	<main>
		<h1>{login_name}'s Treasure Map</h1>
		<ul>
			{
				user_map_links !== null
					? user_map_links.Links.map((link) => <Link link={link} />)
					: null
			}
		</ul>
	</main>
</Layout>

