---
import jwt from 'jsonwebtoken'
interface Props {
	title: string
}

const { title } = Astro.props

let token = Astro.cookies.get('token')?.value
let locals_user = Astro.locals.user
let user = locals_user ?? Astro.cookies.get('user')?.value

if (token) {

	// set cookie if redirected from login
	if (locals_user) {
		Astro.cookies.set('user', locals_user, {path: '/', maxAge: 3600, sameSite: 'strict', secure: true})
	}

	// else verify JWT if token found but not redirected from login
	else if (!user) {
		jwt.verify(token, 'secret', function (err: any, decoded) {
			// @ts-ignore
			if (err || !decoded || !decoded.login_name) {
				token = undefined
				Astro.cookies.delete('token')
				Astro.cookies.delete('user')
				return
			}

			// @ts-ignore
			Astro.cookies.set('user', decoded.login_name, {path: '/', maxAge: 3600, sameSite: 'strict', secure: true})
		})
	}
}
---

<!doctype html>
<html lang='en'>
	<head>
		<meta charset='UTF-8' />
		<meta name='description' content='Open Internet Treasure Map' />
		<meta name='viewport' content='width=device-width' />
