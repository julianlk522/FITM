---
import jwt from 'jsonwebtoken'
interface Props {
	title: string
}

const { title } = Astro.props
// read cookie
let token = null
let user = null
if (Astro.cookies.has('token')) {
	token = Astro.cookies.get('token')?.value
}
if (token) {
	// check if token is valid
	jwt.verify(token, 'secret', function (err: any, decoded) {
		if (err) {
			token = null
			Astro.cookies.delete('token')
			return
		}
		// @ts-ignore
		if (!decoded?.login_name) {
			return
		}
		// @ts-ignore
		user = decoded.login_name
		// @ts-ignore
		Astro.cookies.set('user', decoded.login_name, {path: '/', maxAge: 3600, sameSite: 'strict', secure: true})
	})
}
---

<!doctype html>
<html lang='en'>
	<head>
		<meta charset='UTF-8' />
		<meta name='description' content='Open Internet Treasure Map' />
		<meta name='viewport' content='width=device-width' />
		<link rel='icon' type='image/svg+xml' href='/favicon.svg' />
		<meta name='generator' content={Astro.generator} />
		<title>{title}</title>
	</head>
	<nav>
		<a href='/'>Home</a>
		{
			token && user ? (
			<a href=`/map/${user}` id="username">{user}</a>) : (<a href='/login'>Login</a>)
		}
	</nav>
