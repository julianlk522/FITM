---
interface Props {
	Title: string
}

const { Title: title } = Astro.props
let user = Astro.cookies.get('user')?.value
---

<!doctype html>
<html lang='en'>
	<head>
		<meta charset='UTF-8' />
		<meta name='description' content='Open Internet Treasure Map' />
		<meta name='viewport' content='width=device-width' />
		<link rel='icon' type='image/svg+xml' href='/favicon.svg' />
		<meta name='generator' content={Astro.generator} />
		<title>{title}</title>
	</head>
	<nav>
		<a href='/'>Home</a>
		<a href='/about'>About</a>
		{
			user ? (
			<a href=`/map/${user}` id="user-tmap-link">{user}</a>) : (<a href='/login' id="login-link">Login</a>)
		}
	</nav>
	<body>
		<slot />
	</body>
	<footer>
		<a href='/feedback'>Leave Feedback</a>
	</footer>

	<style is:global>
		:root {
			--text: hsl(0, 0%, 92%);
			--text-treasurey: hsl(44, 55%, 80%);
			--text-treasurey-dark: hsl(46, 24%, 52%);
			--text-treasurey-mild: hsl(44, 15%, 80%);
			
			--accent-treasurey: hsl(44, 95%, 71%);
			--accent-treasurey-mild: hsl(54, 77%, 75%);
			--accent-sky: hsl(180, 33%, 82%);
			--accent-green: hsl(112, 33%, 56%);
			--accent-green-mild: hsl(112, 66%, 90%);
		}
		html {
			font-family: system-ui, sans-serif;
			background: #13151a;
			background-size: 224px;
		}
		nav,
		footer {
			max-width: 1080px;
			margin: 0 auto;
			padding: 1rem;

			a,
			a:visited {
				color: var(--text);
			}
		}
		nav :is(#user-tmap-link, #login-link) {
			float: right;
		}
		main {
			margin: auto;
			padding: 1rem;
			width: 800px;
			max-width: calc(100% - 2rem);
			color: var(--text);
			font-size: 18px;
			line-height: 1.6;
		}
		h1 {
			font-size: 3rem;
			font-weight: 700;
			line-height: 1;
			text-align: center;
		}
		h1:has(+ h2.subtitle) {
			margin-bottom: 25px;
		}
		h2 {
			font-size: 1.5rem;
		}
		h2.subtitle {
			font-size: 1rem;
			margin-bottom: 50px;
			text-align: center;
		}
		h2.subtitle.bg {
			background: rgba(var(--accent-light), 5%);
			padding: 3px;
		}
		h3 {
			font-size: 1.15rem;
		}
		h2, h3, h4, h5, h6 {
			margin: 0;
		}
		section,
		footer {
			margin-top: 50px;
		}
		section:first-of-type {
			margin-top: 0;
		}
		a:not(:visited) {
			color: var(--text-treasurey);
		}
		a:visited {
			color: var(--text-treasurey-dark);
		}
		button.img-btn {
			padding: 3px 5px 0px;
			margin-top: 0;
			background-color: transparent;
			border: none;
			cursor: pointer;
		}

		#top-cats {
			display: flex;
			flex-direction: column;
			list-style-position: inside;
		}

		@media (min-width: 375px) {
			h1 {
				font-size: 4rem;
			}

			h2 {
				font-size: 2rem;
			}

			section,
			footer {
				margin-top: 75px;
			}
		}

		@media (min-width: 480px) {
			#top-cats {
				flex-wrap: wrap;
				max-height: 350px;

				li {
					max-width: 50%
				}
			}
		}

		@media (min-width: 680px) {
			#top-cats {
				max-height: 200px;

				li {
					max-width: 33%
				}
			}
		}

	</style>


</html>
